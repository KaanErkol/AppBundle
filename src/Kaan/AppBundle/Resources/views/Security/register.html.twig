{% extends 'AppBundle::layout.html.twig' %}
{% block content %}
<div class="span6 centered">
<div class="box">
    <form action="{{path('_security_register')}}" method="post" class="form-horizontal">
    {{ form_widget(form ,{'form_type': 'horizontal'}) | raw }}

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn">Cancel</button>
        </div>
    </form>
</div>
</div>
{%endblock%}
{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $('.date').datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
{% endblock %}
